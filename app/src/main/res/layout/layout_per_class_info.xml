<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="60dp">
    <com.thinkcool.circletextimageview.CircleTextImageView
        android:id="@+id/item_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
        android:layout_marginVertical="4dp"
        app:citv_border_color="@android:color/white"
        app:citv_border_width="2dp"
        app:citv_fill_color="@color/colorPrimary"
        app:citv_text_color="@android:color/white"
        app:citv_text_text="é«˜"
        app:citv_text_size="20sp"
        android:layout_marginLeft="10dp" />
    <TextView
        android:id="@+id/left_name"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@id/item_icon"
        android:textSize="16dp"
        android:layout_margin="10dp"
        android:textColor="@color/black_80"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/right_name"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:textColor="@color/black_80"
        android:layout_height="wrap_content"
        android:textSize="18dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/midline"
        android:layout_marginLeft="65dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/bottomline"
        android:layout_alignParentBottom="true"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height">
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/topline"
        android:layout_alignParentTop="true"
        android:background="@color/gray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height">
    </LinearLayout>
</RelativeLayout>