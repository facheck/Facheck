<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_horizontal_margin"
    android:background="@drawable/header_rounded_shape">

    <TextView
        android:id="@+id/title_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default_small_padding"
        android:gravity="center"
        android:textColor="@color/font_normal"
        android:textSize="@dimen/default_small_text_size" />

    <ImageView
        android:id="@+id/icon_control"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/default_general_margin"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/arrow_down"

        />

</RelativeLayout>